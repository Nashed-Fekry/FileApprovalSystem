@model FileApprovalSystem.Models.FileRecord

@{
    ViewData["Title"] = "Approve File";
}

<h2>@ViewData["Title"]</h2>

<div class="form-group">
    <label>File Number:</label>
    <p>@Model.FileNumber</p>
</div>
<div class="form-group">
    <label>Subject:</label>
    <p>@Model.Subject</p>
</div>
<div class="form-group">
    <label>File Presenter:</label>
    <p>@Model.FilePresenter</p>
</div>
<div class="form-group">
    <label>File Status:</label>
    <p>@Model.FileStatus</p>
</div>
<div class="form-group">
    <label>File Date:</label>
    <p>@Model.FileDate.ToString("yyyy-MM-dd")</p>
</div>
<div class="form-group">
    <label>Approval Stage:</label>
    <p>@Model.ApprovalStage</p>
</div>

<form asp-action="Approve" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-success">Approve</button>
</form>
